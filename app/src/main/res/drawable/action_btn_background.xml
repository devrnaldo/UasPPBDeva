<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- State for when the button is pressed -->
<item android:state_pressed="true">
    <shape
        android:shape="rectangle">
        <solid android:color="#2e2e2e"/>
        <corners android:radius="12dp"/>
        <padding
            android:left="16dp"
            android:top="12dp"
            android:right="16dp"
            android:bottom="12dp"/>
    </shape>
</item>

<!-- State for normal button -->
<item>
    <shape
        android:shape="rectangle">
        <gradient
            android:startColor="#000000"
            android:endColor="#000000"
            android:angle="45"/>
        <corners android:radius="12dp"/>
        <padding
            android:left="16dp"
            android:top="12dp"
            android:right="16dp"
            android:bottom="12dp"/>
    </shape>
</item>
</selector>
